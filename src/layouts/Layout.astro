---
import TopNav from '../components/TopNav.astro';

interface Props {
  title?: string;
}

const { title = 'MySpace Parody' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body class="myspace-body">
    <div id="myspace-container">
      <header class="myspace-header">
        <h1>{title}</h1>
        <p class="myspace-tagline">
          "Your customizable space for bad HTML and good vibes."
        </p>
      </header>

      <main id="myspace-main">
        <slot />
      </main>

      <footer class="myspace-footer">
        <p>© 2025 MyScapetuary - Have your space — Powered by Astro</p>
      </footer>
    </div>
  </body>
</html>
